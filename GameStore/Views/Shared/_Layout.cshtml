<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-main.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="navbar-header pull-left">
                <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index"><img width=70 px src="/Logo_Images/StoreLogo.png" title="Home Page" alt="Logo" /></a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Games" asp-action="Index">Store</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Log In/Out</a>
                        <div class="dropdown-menu" style="">
                            <a class="dropdown-item" asp-area="" asp-controller="Login" asp-action="Index">Log In</a>
                            <a class="dropdown-item" href="@Url.Action("LogOut", "Login")">Log Out</a>
                        </div>
                    </li>
                </ul>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <form class="form-inline my-2 my-lg-0">
                        <button asp-area="" asp-controller="MyPurchases" asp-action="Index" class="btn btn-primary disabled my-2 my-sm-0" style="font-size: 27px"><i class="fa fa-history" aria-hidden="true" title="My Purchases"></i></button>
                        <button asp-area="" asp-controller="ShoppingCart" asp-action="Index" class="btn btn-primary disabled my-2 my-sm-0" style="font-size: 27px"><i class="fa fa-shopping-cart" title="Shopping Cart"></i></button>
                        <p class="text-muted">@ViewData["Count"]</p>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GameStore - Privacy
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
